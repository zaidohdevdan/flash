{
  "name": "flash",
  "module": "index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev:web": "bun --filter=@flash/web dev",
    "dev:server": "bun --filter=@flash/server dev",
    "dev": "bun run dev:server & bun run dev:web",
    "build": "bun run --filter=@flash/web build",
    "start": "bun run --filter=@flash/server start",
    "install:all": "bun install"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "workspaces": [
    "apps/*",
    "server",
    "packages/*"
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "peerDependencies": {
    "typescript": "^5"
  }
}